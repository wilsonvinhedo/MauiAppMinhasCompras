<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Relatório" Clicked="ToolbarItem_Relatorio_Clicked" />
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1" />
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" 
                  Margin="0,10,0,0"
                  Placeholder="Buscar produtos..."
                  TextChanged="txt_search_TextChanged"/>

        <Label Text="Filtrar por Categoria" Margin="10,5,0,0"/>
        <Picker x:Name="pickerFiltroCategoria" 
                Margin="10,0,10,10"
                Title="Selecione uma categoria"
                SelectedIndexChanged="OnFiltroCategoriaChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Todas</x:String>
                    <x:String>Sem Categoria</x:String>
                    <x:String>Alimentos</x:String>
                    <x:String>Higiene</x:String>
                    <x:String>Limpeza</x:String>
                    <x:String>Outros</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Border Padding="0" Margin="10" VerticalOptions="Fill">
            <Grid>
                <ListView x:Name="lst_produtos"
                          IsPullToRefreshEnabled="True"
                          Refreshing="lst_produtos_Refreshing"
                          ItemSelected="lst_produtos_ItemSelected"
                          HasUnevenRows="True">

                    <ListView.Header>
                        <Grid ColumnDefinitions="40, 150, 80, 50, 80"
                              BackgroundColor="{StaticResource Gray100}"
                              Padding="10">
                            <Label Grid.Column="0" Text="ID" FontAttributes="Bold" />
                            <Label Grid.Column="1" Text="Descrição" FontAttributes="Bold" />
                            <Label Grid.Column="2" Text="Preço" FontAttributes="Bold" />
                            <Label Grid.Column="3" Text="Qtd" FontAttributes="Bold" />
                            <Label Grid.Column="4" Text="Total" FontAttributes="Bold" />
                        </Grid>
                    </ListView.Header>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.ContextActions>
                                    <MenuItem Text="Remover" Clicked="MenuItem_Clicked" IsDestructive="True" />
                                </ViewCell.ContextActions>
                                <Grid ColumnDefinitions="40, 150, 80, 50, 80" Padding="10">
                                    <Label Grid.Column="0" Text="{Binding Id}" />
                                    <Label Grid.Column="1" Text="{Binding Descricao}" />
                                    <Label Grid.Column="2" Text="{Binding Preco, StringFormat='{}{0:C}'}" />
                                    <Label Grid.Column="3" Text="{Binding Quantidade}" />
                                    <Label Grid.Column="4" Text="{Binding Total, StringFormat='{}{0:C}'}" />
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
    </VerticalStackLayout>
</ContentPage>