<?xml version="1.0" encoding="UTF-8" ?>
<Shell 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiAppMinhasCompras.Views"
    x:Class="MauiAppMinhasCompras.AppShell">

    <!-- Página Inicial -->
    <ShellContent 
        Title="Minhas Compras" 
        ContentTemplate="{DataTemplate views:ListaProduto}" 
        Route="ListaProduto" />

    <!-- Adicionar Relatório -->
    <ShellContent 
        Title="Relatório" 
        ContentTemplate="{DataTemplate views:RelatorioCategoria}" 
        Route="RelatorioCategoria" />
</Shell>